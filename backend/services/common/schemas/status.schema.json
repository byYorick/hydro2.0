{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StatusPayload",
  "description": "Payload статуса узла (node-level topic .../status)",
  "type": "object",
  "required": ["status", "ts"],
  "properties": {
    "status": {
      "type": "string",
      "description": "Статус узла",
      "enum": ["ONLINE", "OFFLINE"]
    },
    "ts": {
      "type": "integer",
      "description": "Unix timestamp в секундах",
      "minimum": 0
    }
  },
  "additionalProperties": false
}
