{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HeartbeatPayload",
  "description": "Payload heartbeat узла (node-level topic .../heartbeat)",
  "type": "object",
  "required": ["uptime", "free_heap"],
  "properties": {
    "uptime": {
      "type": "integer",
      "description": "Uptime в секундах",
      "minimum": 0
    },
    "free_heap": {
      "type": "integer",
      "description": "Свободная heap-память в байтах",
      "minimum": 0
    },
    "rssi": {
      "type": "integer",
      "description": "RSSI Wi-Fi (опционально)",
      "minimum": -100,
      "maximum": 0
    }
  },
  "additionalProperties": false
}
