APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=hydro_dev
DB_USERNAME=hydro
DB_PASSWORD=hydro

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=reverb
BROADCAST_CONNECTION_TESTING=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Reverb WebSocket Configuration
REVERB_APP_ID=local
REVERB_APP_KEY=local
REVERB_APP_SECRET=local-secret
REVERB_HOST=localhost
REVERB_PORT=6001
REVERB_SCHEME=http
REVERB_SERVER=reverb
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=6001
REVERB_SERVER_PATH=/app
REVERB_CLIENT_PATH=/app
REVERB_CLIENT_OPTIONS=null
REVERB_ALLOWED_ORIGINS=http://localhost:5173,http://localhost
REVERB_DEBUG=false
REVERB_AUTO_START=true

# Vite WebSocket Configuration (for frontend)
VITE_REVERB_APP_KEY=local
VITE_REVERB_HOST=localhost
VITE_REVERB_PORT=6001
VITE_REVERB_SCHEME=http
VITE_REVERB_SERVER_PATH=/app
VITE_WS_TLS=false
VITE_ENABLE_WS=true

# Access control mode: legacy | shadow | enforce
ACCESS_CONTROL_MODE=legacy
ACCESS_CONTROL_SHADOW_LOG_CHANNEL=access_shadow
ACCESS_CONTROL_SHADOW_LOG_LEVEL=notice
