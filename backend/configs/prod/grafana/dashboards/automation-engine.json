{
  "title": "Automation Engine Service",
  "tags": [
    "automation-engine",
    "zones",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "id": 1,
      "title": "Service Status",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "up{job=\"automation-engine\"}",
          "refId": "A",
          "legendFormat": "Automation Engine"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            }
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "Zone Checks Rate",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(zone_checks_total[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 3,
      "title": "Commands Sent Rate",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(automation_commands_sent_total[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 4,
      "title": "Config Fetch Success Rate",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(config_fetch_success_total[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        }
      }
    },
    {
      "id": 5,
      "title": "Zone Check Duration",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(zone_check_seconds_bucket[5m]))",
          "refId": "A",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(zone_check_seconds_bucket[5m]))",
          "refId": "B",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(zone_check_seconds_bucket[5m]))",
          "refId": "C",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 6,
      "title": "Commands Sent by Zone",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "expr": "rate(automation_commands_sent_total[5m])",
          "refId": "A",
          "legendFormat": "Zone {{zone_id}}"
        }
      ]
    },
    {
      "id": 7,
      "title": "Commands Sent by Metric Type",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum by (metric) (rate(automation_commands_sent_total[5m]))",
          "refId": "A",
          "legendFormat": "{{metric}}"
        }
      ]
    },
    {
      "id": 8,
      "title": "Config Fetch Status",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "rate(config_fetch_success_total[5m])",
          "refId": "A",
          "legendFormat": "Success"
        },
        {
          "expr": "sum by (error_type) (rate(config_fetch_errors_total[5m]))",
          "refId": "B",
          "legendFormat": "Error: {{error_type}}"
        }
      ]
    },
    {
      "id": 9,
      "title": "MQTT Publish Errors",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "rate(mqtt_publish_errors_total[5m])",
          "refId": "A",
          "legendFormat": "{{error_type}}"
        }
      ]
    },
    {
      "id": 10,
      "title": "Automation Loop Errors",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "targets": [
        {
          "expr": "rate(automation_loop_errors_total[5m])",
          "refId": "A",
          "legendFormat": "{{error_type}}"
        }
      ]
    },
    {
      "id": 11,
      "title": "Error Handler Errors",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 28
      },
      "targets": [
        {
          "expr": "rate(automation_errors_total[5m])",
          "refId": "A",
          "legendFormat": "Zone {{zone_id}} - {{error_type}}"
        }
      ]
    },
    {
      "id": 12,
      "title": "Zone Checks Total",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 36
      },
      "targets": [
        {
          "expr": "zone_checks_total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 13,
      "title": "Total Commands Sent",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 36
      },
      "targets": [
        {
          "expr": "sum(automation_commands_sent_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 14,
      "title": "Total Errors",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 36
      },
      "targets": [
        {
          "expr": "sum(automation_loop_errors_total) + sum(automation_errors_total) + sum(mqtt_publish_errors_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 10,
                "color": "yellow"
              },
              {
                "value": 100,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 15,
      "title": "Processing Efficiency",
      "type": "gauge",
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 36
      },
      "targets": [
        {
          "expr": "(sum(rate(automation_commands_sent_total[5m])) / sum(rate(zone_checks_total[5m]))) * 100",
          "refId": "A",
          "legendFormat": "Commands per Check %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 16,
      "title": "Scheduler Task Latency (p95)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 40
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, task_type) (rate(scheduler_task_accept_latency_sec_bucket[5m])))",
          "refId": "A",
          "legendFormat": "accept p95 {{task_type}}"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le, task_type) (rate(scheduler_task_completion_latency_sec_bucket{status=\"completed\"}[5m])))",
          "refId": "B",
          "legendFormat": "complete p95 {{task_type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 17,
      "title": "Scheduler Active Tasks and Failures",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 40
      },
      "targets": [
        {
          "expr": "scheduler_active_tasks",
          "refId": "A",
          "legendFormat": "active_tasks"
        },
        {
          "expr": "sum by (task_type, status) (rate(scheduler_task_status_total{status=~\"failed|timeout|submit_failed|not_found\"}[5m]))",
          "refId": "B",
          "legendFormat": "fail_rate {{task_type}}/{{status}}"
        }
      ]
    }
  ],
  "id": null,
  "uid": null
}
