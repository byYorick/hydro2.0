# HIL (Hardware-In-the-Loop) Test Environment Configuration
# Copy this file to .env.hil and adjust values as needed

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=hydro_hil
DB_USER=hydro
DB_PASSWORD=hydro_hil

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# MQTT Configuration
# =============================================================================
# MQTT_EXTERNAL_HOST - IP адрес хоста для подключения ESP32 устройств
# Используйте IP адрес вашего компьютера в локальной сети
# Для Linux: ip addr show | grep "inet " | grep -v 127.0.0.1
# Для Windows: ipconfig (IPv4 Address)
# Для macOS: ifconfig | grep "inet " | grep -v 127.0.0.1
MQTT_EXTERNAL_HOST=192.168.1.100
MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_WS_PORT=9001

# MQTT User Credentials (для сервисов)
MQTT_BRIDGE_USER=mqtt_bridge
MQTT_BRIDGE_PASS=bridge_pass
MQTT_HISTORY_LOGGER_USER=history_logger
MQTT_HISTORY_LOGGER_PASS=logger_pass
MQTT_AUTOMATION_ENGINE_USER=automation_engine
MQTT_AUTOMATION_ENGINE_PASS=automation_pass

# =============================================================================
# API Configuration
# =============================================================================
API_BASE_URL=http://localhost:8080
API_PORT=8080

# =============================================================================
# WebSocket Configuration
# =============================================================================
WS_URL=ws://localhost:6001
WS_PORT=6001
REVERB_APP_ID=app
REVERB_APP_KEY=local
REVERB_APP_SECRET=secret

# =============================================================================
# Service URLs (для внутренних проверок здоровья)
# =============================================================================
MQTT_BRIDGE_URL=http://mqtt-bridge:9000
HISTORY_LOGGER_URL=http://history-logger:9300
AUTOMATION_ENGINE_URL=http://automation-engine:9401

# =============================================================================
# Service Ports
# =============================================================================
MQTT_BRIDGE_PORT=9000
HISTORY_LOGGER_PORT=9300
HISTORY_LOGGER_METRICS_PORT=9301
TELEMETRY_AGGREGATOR_METRICS_PORT=9404
AUTOMATION_ENGINE_METRICS_PORT=9401
AUTOMATION_ENGINE_API_PORT=9405

# =============================================================================
# Authentication Tokens (для тестирования)
# =============================================================================
# ⚠️ ВАЖНО: Эти токены используются только для тестирования!
# ⚠️ В production используйте сильные случайные токены!
PY_API_TOKEN=dev-token-12345
PY_INGEST_TOKEN=dev-token-12345
LARAVEL_API_TOKEN=dev-token-12345
HISTORY_LOGGER_API_TOKEN=dev-token-12345

# =============================================================================
# Default Test Data
# =============================================================================
# Значения по умолчанию для тестовых зон и теплиц
DEFAULT_GREENHOUSE_UID=gh-test-001
DEFAULT_ZONE_UID=zone-test-001

# =============================================================================
# Automation Engine
# =============================================================================
# Установите ENABLE_AUTOMATION_ENGINE=true для включения automation-engine
# Или используйте профиль: docker compose --profile automation up
ENABLE_AUTOMATION_ENGINE=false








