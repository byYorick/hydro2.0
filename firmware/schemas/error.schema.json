{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Error Message Schema",
  "description": "Schema for error messages published by firmware nodes",
  "type": "object",
  "required": ["level", "component", "error_code", "message"],
  "properties": {
    "level": {
      "type": "string",
      "description": "Error severity level",
      "enum": ["ERROR", "WARNING", "INFO"]
    },
    "component": {
      "type": "string",
      "description": "Component that generated the error"
    },
    "error_code": {
      "type": "string",
      "description": "Error code identifier",
      "pattern": "^(infra_|biz_)[a-z_]+$"
    },
    "message": {
      "type": "string",
      "description": "Human-readable error message"
    },
    "details": {
      "type": "object",
      "description": "Additional error details (optional)",
      "additionalProperties": true
    },
    "ts": {
      "type": "integer",
      "description": "UTC timestamp in milliseconds (optional)"
    }
  },
  "additionalProperties": false
}

