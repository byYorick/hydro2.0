{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TelemetryPayload",
  "description": "Payload телеметрии от узлов через MQTT",
  "type": "object",
  "required": ["metric_type", "value", "ts"],
  "properties": {
    "metric_type": {
      "type": "string",
      "description": "Тип метрики (UPPERCASE) согласно MQTT спецификации",
      "enum": [
        "PH",
        "EC",
        "TEMPERATURE",
        "HUMIDITY",
        "CO2",
        "LIGHT_INTENSITY",
        "WATER_LEVEL",
        "WATER_LEVEL_SWITCH",
        "SOIL_MOISTURE",
        "SOIL_TEMP",
        "WIND_SPEED",
        "OUTSIDE_TEMP",
        "FLOW_RATE",
        "PUMP_CURRENT"
      ]
    },
    "value": {
      "type": "number",
      "description": "Значение метрики"
    },
    "ts": {
      "type": "integer",
      "description": "Unix timestamp в секундах (UTC)",
      "minimum": 0
    },
    "unit": {
      "type": "string",
      "description": "Единица измерения",
      "maxLength": 32
    },
    "raw": {
      "type": "integer",
      "description": "Сырое значение сенсора"
    },
    "stub": {
      "type": "boolean",
      "description": "Флаг, указывающий что значение симулировано"
    },
    "stable": {
      "type": "boolean",
      "description": "Флаг стабильности показаний сенсора"
    }
  },
  "additionalProperties": false
}
