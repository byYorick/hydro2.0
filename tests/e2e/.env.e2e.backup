# E2E Test Environment Variables
# Скопируйте этот файл в .env.e2e и настройте значения

# Database
POSTGRES_PASSWORD=hydro_e2e
POSTGRES_USER=hydro
POSTGRES_DB=hydro_e2e
POSTGRES_PORT=5433

# Redis
REDIS_PORT=6380

# MQTT
MQTT_PORT=1884

# Laravel
LARAVEL_PORT=8081
REVERB_PORT=6002

# Reverb (WebSocket)
REVERB_APP_KEY=local
REVERB_APP_SECRET=secret

# Services Ports
HISTORY_LOGGER_PORT=9302
HISTORY_LOGGER_METRICS_PORT=9303
MQTT_BRIDGE_PORT=9001
TELEMETRY_AGGREGATOR_METRICS_PORT=9405
AUTOMATION_ENGINE_METRICS_PORT=9406
AUTOMATION_ENGINE_API_PORT=9407

# MQTT Users
MQTT_HISTORY_LOGGER_USER=history_logger
MQTT_HISTORY_LOGGER_PASS=logger_pass
MQTT_MQTT_BRIDGE_USER=mqtt_bridge
MQTT_MQTT_BRIDGE_PASS=bridge_pass
MQTT_AUTOMATION_ENGINE_USER=automation_engine
MQTT_AUTOMATION_ENGINE_PASS=automation_pass

# API Tokens (для тестирования используются dev-токены)
PY_API_TOKEN=dev-token-12345
PY_INGEST_TOKEN=dev-token-12345
LARAVEL_API_TOKEN=dev-token-12345
HISTORY_LOGGER_API_TOKEN=dev-token-12345

# Node Simulator Configuration
# Путь к конфигурационному файлу node-sim внутри контейнера
NODE_SIM_CONFIG=/app/config/sim.yaml
